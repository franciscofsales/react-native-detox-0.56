{
  "name": "DetoxSetup",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test-ios": "detox build --configuration ios.sim.debug && detox test --configuration ios.sim.debug"
  },
  "dependencies": {
    "react": "16.4.1",
    "react-native": "0.56.0"
  },
  "devDependencies": {
    "@types/react": "^16.4.7",
    "@types/react-native": "^0.56.4",
    "babel-jest": "21.2.0",
    "babel-preset-react-native": "5.0.0",
    "detox": "^8.1.1",
    "jest": "21.2.1",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "16.4.1",
    "typescript": "^3.0.1"
  },
  "jest": {
    "preset": "react-native",
    "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/DetoxSetup.app",
        "build": "xcodebuild -project ios/DetoxSetup.xcodeproj -scheme DetoxSetup -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    },
    "runner-config": "e2e/config.json",
    "test-runner": "jest"
  }
}
